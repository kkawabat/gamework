{
  "name": "gamework",
  "version": "1.0.0",
  "description": "A general-purpose framework for online board games with minimal operational cost",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:browser": "node scripts/test-browser.js",
    "test:all": "npm test && npm run test:browser",
    "dev:server": "node scripts/dev-server.js",
    "dev:simple": "node scripts/simple-dev-server.js",
    "build:game": "chmod +x scripts/build-tic-tac-toe.sh && ./scripts/build-tic-tac-toe.sh",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist tic-tac-toe-build"
  },
  "keywords": [
    "board-games",
    "webrtc",
    "p2p",
    "game-framework"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-dom": "^5.16.5",
    "jsdom": "^22.1.0",
    "puppeteer": "^21.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "qrcode": "^1.5.0",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "webrtc-adapter": "^8.0.0"
  }
}

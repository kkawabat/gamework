{
  "name": "gamework",
  "version": "1.0.0",
  "description": "A general-purpose framework for online board games with minimal operational cost",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:client": "tsc",
    "build:server": "cd server && npm run build",
    "dev": "tsc --watch",
    "dev:client": "tsc --watch",
    "dev:server": "cd server && npm run dev",
    "start": "node dist/index.js",
    "start:server": "cd server && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "npm test",
    "build:game": "chmod +x scripts/build-demos-vite.sh && ./scripts/build-demos-vite.sh",
    "dev:game": "vite",
    "preview:game": "vite preview",
    "lint": "eslint src/**/*.ts shared/**/*.ts",
    "lint:server": "cd server && npm run lint",
    "clean": "rm -rf dist demo-build server/dist"
  },
  "keywords": [
    "board-games",
    "webrtc",
    "p2p",
    "game-framework"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.5.14"
  },
  "dependencies": {
    "qrcode": "^1.5.0",
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "webrtc-adapter": "^8.0.0"
  }
}
